<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="امروز حالتون چطوره؟"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_s">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/very_good"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/very_good"
            app:tint="@color/orange" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/good"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/good"
            app:tint="@color/green" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/normal"
            app:tint="@color/firozei" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/bad"
            app:tint="@color/blue_light" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/very_bad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/very_bad"
            app:tint="@color/gray_emoji" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="5"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="خیلی خوب"
            android:textColor="@color/orange"
            android:textSize="14sp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="خوب"
            android:textColor="@color/green"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="معمولی"
            android:textColor="@color/firozei"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="بد"
            android:textColor="@color/blue_light"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="خیلی بد"
            android:textColor="@color/gray_emoji"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_ss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="امروز چه حسی دارید؟"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll2" />

    <com.nex3z.flowlayout.FlowLayout
        android:id="@+id/cg"
        app:flChildSpacing="auto"
        app:flChildSpacingForLastRow="align"
        app:flRowSpacing="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ss">

        <CheckBox
            android:layout_margin="2dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_green"
            android:button="@null"
            android:ellipsize="end"

            android:gravity="center"
            android:text="پرکار"
            android:textColor="@color/select_green_text" />

        <CheckBox
            android:layout_margin="2dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_green"
            android:button="@null"
            android:ellipsize="end"

            android:gravity="center"
            android:text="علاقه مند"
            android:textColor="@color/select_green_text" />

        <CheckBox
            android:layout_margin="2dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_green"
            android:button="@null"
            android:ellipsize="end"

            android:gravity="center"
            android:text="خوشحال"
            android:textColor="@color/select_green_text" />

        <CheckBox
            android:layout_margin="2dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_green"
            android:button="@null"
            android:ellipsize="end"

            android:gravity="center"
            android:text="مشتاق"
            android:textColor="@color/select_green_text" />

        <CheckBox
            android:layout_margin="2dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_green"
            android:button="@null"
            android:ellipsize="end"

            android:gravity="center"
            android:text="آرام"
            android:textColor="@color/select_green_text" />

        <CheckBox
            android:layout_margin="2dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_green"
            android:button="@null"
            android:ellipsize="end"

            android:gravity="center"
            android:text="پیروز"
            android:textColor="@color/select_green_text" />

        <CheckBox
            android:layout_margin="2dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_green"
            android:button="@null"
            android:ellipsize="end"

            android:gravity="center"
            android:text="کمک کننده"
            android:textColor="@color/select_green_text" />

        <CheckBox
            android:layout_margin="2dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_green"
            android:button="@null"
            android:ellipsize="end"

            android:gravity="center"
            android:text="دلگرم"
            android:textColor="@color/select_green_text" />

        <CheckBox
            android:layout_margin="2dp"
            android:padding="5dp"
            android:background="@drawable/select_red"
            android:button="@null"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/select_red_text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="غمگین" />


        <CheckBox
            android:layout_margin="2dp"
            android:padding="5dp"
            android:background="@drawable/select_red"
            android:button="@null"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/select_red_text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="عصبانی" />

        <CheckBox
            android:layout_margin="2dp"
            android:padding="5dp"
            android:background="@drawable/select_red"
            android:button="@null"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/select_red_text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ترسیده" />

        <CheckBox
            android:layout_margin="2dp"
            android:padding="5dp"
            android:background="@drawable/select_red"
            android:button="@null"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/select_red_text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="خجالت زده" />

        <CheckBox
            android:layout_margin="2dp"
            android:padding="5dp"
            android:background="@drawable/select_red"
            android:button="@null"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/select_red_text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="دستپاچه" />

        <CheckBox
            android:layout_margin="2dp"
            android:padding="5dp"
            android:background="@drawable/select_red"
            android:button="@null"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/select_red_text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="دارای حس گناه" />

        <CheckBox
            android:layout_margin="2dp"
            android:padding="5dp"
            android:background="@drawable/select_red"
            android:button="@null"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/select_red_text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تنها" />

        <CheckBox
            android:layout_margin="2dp"
            android:padding="5dp"
            android:background="@drawable/select_red"
            android:button="@null"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/select_red_text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بی حس" />


        <CheckBox
            android:layout_margin="2dp"
            android:padding="5dp"
            android:background="@drawable/select_red"
            android:button="@null"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/select_red_text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="خسته" />

    </com.nex3z.flowlayout.FlowLayout>


    <Button
        android:id="@+id/btn_apply"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="ثبت"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cg" />
</androidx.constraintlayout.widget.ConstraintLayout>